---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'A minimal tech blog' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Source+Serif+4:ital,opsz,wght@0,8..60,400;0,8..60,500;0,8..60,600;0,8..60,700;1,8..60,400;1,8..60,500&family=Inter:wght@400;500;600&family=IBM+Plex+Mono:ital,wght@0,400;0,500;1,400&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <iframe
      src="/donut/index.html"
      class="donut-bg"
      title="Spinning donut background"
      aria-hidden="true"
    ></iframe>
    <p class="donut-caption">
      <span class="donut-caption-label">fun fact:</span> I started programming with p5.js, and this donut.c remake was my first cool project.
    </p>
    <Header currentPath={currentPath} />
    <main class="flex-1 max-w-[var(--spacing-page)] mx-auto px-6 w-full">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  .donut-bg {
    position: fixed;
    top: 0;
    right: -10%;
    width: 70vw;
    height: 100vh;
    border: none;
    pointer-events: none;
    z-index: -1;
    opacity: 0.4;
  }

  @media (max-width: 768px) {
    .donut-bg {
      display: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .donut-bg,
    .donut-caption {
      display: none;
    }
  }

  .donut-caption {
    position: fixed;
    bottom: 1.5rem;
    right: 1.5rem;
    max-width: 200px;
    font-size: 0.65rem;
    line-height: 1.4;
    color: var(--color-muted);
    text-align: right;
    z-index: 1;
    opacity: 0.7;
  }

  .donut-caption-label {
    font-style: italic;
  }

  @media (max-width: 1200px) {
    .donut-caption {
      display: none;
    }
  }
</style>
