---
const lastUpdated = new Date().toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
});
---

<footer class="mt-24 py-6">
  <div class="max-w-[var(--spacing-page)] mx-auto px-6 flex justify-end">
    <span class="text-xs text-[var(--color-muted)]">
      Updated {lastUpdated}
    </span>
  </div>
</footer>
